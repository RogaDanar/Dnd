@{
    Layout = null;
}
<section>
    <h2>Dungeons and Dragons Character Creator</h2>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Race</th>
                <th>Class</th>
            </tr>
        </thead>
        <tbody data-bind="foreach:characters">
            <tr>
                <td data-bind="text:Name"></td>
                <td data-bind="text:Race"></td>
                <td data-bind="text:Class"></td>
                <td><a data-bind="attr:{href:'#/character/details/'+id}">Details</a></td>
            </tr>
        </tbody>
    </table>

    <a href="#/character/create">Create character</a>
</section>
